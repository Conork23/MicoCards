<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#ffa5a5c8" />
            <gradient android:angle="90" android:endColor="#ff8cb7bd" android:startColor="#ff43719a" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#ff4273c8" />
            <gradient android:angle="90" android:endColor="#ff546cba" android:startColor="#ff43719a" />
        </shape>
    </item>
</selector>