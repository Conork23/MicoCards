<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.micocards.cclj.micocards.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/app_logo" />

        <ImageButton
            android:id="@+id/muteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:background="#00d0e6e6"
            android:onClick="onMuteBtnClick"
            android:src="@drawable/on" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/flashCardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:onClick="onFlashCardClick"
            android:text="Flash Cards"
            android:textColor="#ffcfcfcf"
            android:textSize="25sp" />

        <Button
            android:id="@+id/triviaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:onClick="onTriviaClick"
            android:text="Triva"
            android:textColor="#ffcfcfcf"
            android:textSize="25sp" />

        <Button
            android:id="@+id/spellingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:onClick="onSpellingTestClick"
            android:text="Spelling Test"
            android:textColor="#ffcfcfcf"
            android:textSize="25sp" />

        <Button
            android:id="@+id/achievBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:onClick="onAchievementsClick"
            android:text="Achievements"
            android:textColor="#ffcfcfcf"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>